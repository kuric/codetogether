<form class="form-signin" method="POST">
    {{#each errorMessages}}
        <div class="alert alert-danger">
            {{this.msg}}
        </div>
    {{/each}}
    
    <h2 class="form-signin-heading text-center">New account</h2>
    <input type="text" name="name" class="form-control" placeholder="Name" require="" autofocus="">
    </br>
    <input type="email" name="email" class="form-control" placeholder="Email" require="" autofocus="">
    </br>
    <input type="password" name="password" class="form-control" placeholder="Password" require="" >
    </br>
    <input type="password" name="confirmpassword" class="form-control" placeholder="Confirm Password" require="" >
    </br>
    <button type="submit" class="btn btn-lg btn-primary btn-block">Sign Up</button>
</form>